{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jquery": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error", 4, { "SwitchCase": 4}
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-inner-declarations": 0,
        "no-sparse-arrays": 0,
        "no-unexpected-multiline": 0,
        "no-unsafe-finally": 0
    },
    "globals": {
        "$": false,
        "jQuery": false,
        "Handlebars": false,
        "jest": false,
        "expect": false,
        "test": false
    }
}
